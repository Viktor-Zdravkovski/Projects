<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="SymptomResponderApp.MainPage">


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label 
                Text="Symptom Analyzer"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20" />
            

            <Label Text="Symptom 1:" />
            <Picker 
                x:Name="SymptomPicker1" 
                Title="Select symptom" />


            <Label Text="Symptom 2:" />
            <Picker 
                x:Name="SymptomPicker2" 
                Title="Select symptom" />


            <Label Text="Symptom 3:" />
            <Picker 
                x:Name="SymptomPicker3" 
                Title="Select symptom" />


            <Button
                x:Name="AnalyzeBtn"
                Text="Analyze"
                Clicked="OnAnalyzeClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
